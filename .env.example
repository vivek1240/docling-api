# =============================================================================
# Docling API Service - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# -----------------------------------------------------------------------------
# API Service Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_TITLE=DocProcess API
API_VERSION=1.0.0

# Secret key for signing tokens (generate with: openssl rand -hex 32)
API_SECRET_KEY=your-secret-key-change-in-production

# -----------------------------------------------------------------------------
# Docling Backend Configuration
# -----------------------------------------------------------------------------
# URL of the Docling backend service
DOCLING_BACKEND_URL=http://localhost:5001

# Timeout for document processing (seconds)
DOCLING_TIMEOUT=300

# Maximum file size (bytes) - default 100MB
MAX_FILE_SIZE=104857600

# -----------------------------------------------------------------------------
# Database Configuration (for production use PostgreSQL)
# -----------------------------------------------------------------------------
# SQLite (development)
DATABASE_URL=sqlite:///./docprocess.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/docprocess

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Lightning.AI Configuration (if using Lightning deployment)
# -----------------------------------------------------------------------------
LIGHTNING_API_KEY=
LIGHTNING_TEAM_ID=

# -----------------------------------------------------------------------------
# Modal Configuration (if using Modal deployment)
# -----------------------------------------------------------------------------
MODAL_TOKEN_ID=
MODAL_TOKEN_SECRET=

# -----------------------------------------------------------------------------
# Stripe Configuration (for billing - optional)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_STARTER=
STRIPE_PRICE_ID_PROFESSIONAL=
STRIPE_PRICE_ID_BUSINESS=

# -----------------------------------------------------------------------------
# Modal Cloud Backend (for Railway deployment)
# -----------------------------------------------------------------------------
# Set these to use Modal for GPU processing instead of local Docker
DOCLING_USE_MODAL=true
DOCLING_MODAL_ENDPOINT=https://vivek12345singh--docling-service-convert-endpoint.modal.run
